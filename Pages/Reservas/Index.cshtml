@page
@model SportFieldBooking.Pages.Reservas.IndexModel
@{
    ViewData["Title"] = "Reservas";
}

<div class="container mt-4">
    <h2 class="text-gradient-red fw-bold mb-4">Reservas</h2>

    <div class="mb-3">
        <a asp-page="Create" class="btn btn-gradient-red">Crear nueva reserva</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Campo</th>
                <th>Cliente</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Reservas)
            {
                <tr>
                    <td>@item.Campo?.Nombre</td>
                    <td>@(item.Cliente != null ? item.Cliente.Nombre + " " + item.Cliente.Apellido : "")</td>
                    <td>@item.FechaHoraInicio.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.FechaHoraFin.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.Estado</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@item.IdReserva" class="btn btn-sm btn-outline-primary me-1">Editar</a>
                        <a asp-page="Delete" asp-route-id="@item.IdReserva" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>