@page
@model SportFieldBooking.Pages.Pagos.CreateModel
@{
	ViewData["Title"] = "Registrar Pago";
}

<div class="container">
	<h1 class="text-center">Registrar Pago</h1>
	<hr />

	<div class="container">
		<div class="col-md-6">
			<form method="post">
				<div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="Pago.IdReserva" class="control-label">Reserva</label>
					<select asp-for="Pago.IdReservas" class="form-control" 
					asp-items="ViewBag.Reservas"></select>
					<span asp-validation-for="Pago.IdReserva" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Pago.Monto" class="control-label"></label>
					<input asp-for="Pago.Monto" class="form-control" />
					<span asp-validation-for="Pago.Monto" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Pago.UsuarioId" class="control-label"></label>
					<select asp-for="Pago.UsuarioId" class="form-control" asp-items="@Model.Usuarios"></select>
					<span asp-validation-for="Pago.UsuarioId" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary">Registrar Pago</button>
			</form>
			<a href="@Url.Page("Index")">Volver a la lista de Pagos</a>
		</div>
</div>

