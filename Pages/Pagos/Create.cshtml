@page
@model SportFieldBooking.Pages.Pagos.CreateModel
@{
	ViewData["Title"] = "Registrar Pago";
}

<div class="container">
	<h1 class="text-center">Registrar Pago</h1>
	<hr />

	<div class="container">
		<div class="col-md-6">
			<form method="post">
				<div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="Pago.IdReserva" class="control-label">Reserva</label>
					<select asp-for="Pago.IdReservas" class="form-control" 
					asp-items="ViewBag.Reservas"></select>
					<span asp-validation-for="Pago.IdReserva" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Pago.Monto" class="control-label"></label>
					<input asp-for="Pago.Monto" class="form-control" />
					<span asp-validation-for="Pago.Monto" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Pago.MetodoPago" class="control-label">Metodo de pago</label>

					<select asp-for="Pago.MetodoPago" class="form-control">
						<option value="Tarjeta">Tarjeta</option>
						<option value="Efectivo">Efectivo</option>
						<option value="Transferencia">Transferencia</option>
					</select>
					<span asp-validation-for="Pago.MetodoPago" class="text-danger"></span>
				</div>
				<div class="form-group mt-4">
					<button type="submit" class="btn btn-primary">
						<i class="fas fa-money-bill-wave"></i>Registrar pago
					</button>
					<a asp-asp-page="./Index" class="btn btn-secondary">Cancelar</a>
				</div>
				</form>
		</div>
		<div class="col-md-6">
			<div class="payment-image text-center">
				<img src="/images/payment-methods.png" alt="Métodos de pago" class="img-fluid" style="max-height: 300px;" />
				<p class="mt-2 text-muted">Aceptamos multiples metodos de pago</p>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
}

				

