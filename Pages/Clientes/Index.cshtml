@page
@model SportFieldBooking.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-gradient-red">🧍 Lista de Clientes</h2>
        <a asp-page="Create" class="btn btn-gradient-red">
            <i class="fas fa-plus me-2"></i> Crear Cliente
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded bg-white p-3">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr class="text-uppercase text-muted">
                    <th>@Html.DisplayNameFor(model => model.Clientes[0].Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Clientes[0].Apellido)</th>
                    <th>@Html.DisplayNameFor(model => model.Clientes[0].Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Clientes[0].Telefono)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Clientes)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td class="text-center">
                            <a asp-page="./Edit" asp-route-id="@item.IdCliente" class="btn btn-sm btn-outline-warning me-1">Edit
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.IdCliente" class="btn btn-sm btn-outline-danger">Delete
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .btn-gradient-red {
        background: linear-gradient(to right, #ff416c, #ff4b2b);
        color: white;
        border: none;
        transition: 0.3s ease;
    }

    .btn-gradient-red:hover {
        filter: brightness(1.1);
        transform: scale(1.02);
    }

    .text-gradient-red {
        background: linear-gradient(to right, #ff4b2b, #ff416c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .table-hover tbody tr:hover {
        background-color: #fff5f5;
    }
</style>