@page
@model SportFieldBooking.Pages.Campos.EditModel
@{
    ViewData["Title"] = "Editar Campo";
}

<div class="container mt-5">
    <h2 class="fw-bold text-gradient mb-4">✏️ Editar Campo</h2>

    <form method="post" class="shadow-sm rounded bg-white p-4">
        <input type="hidden" asp-for="Campo.IdCampo" />

        <div class="mb-3">
            <label asp-for="Campo.Nombre" class="form-label fw-semibold"></label>
            <input asp-for="Campo.Nombre" class="form-control" />
            <span asp-validation-for="Campo.Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Campo.Tipo" class="form-label fw-semibold"></label>
            <select asp-for="Campo.Tipo" class="form-select">
                <option value="">-- Seleccione un tipo --</option>
                <option value="Fútbol">Fútbol</option>
                <option value="Tenis">Tenis</option>
                <option value="Baloncesto">Baloncesto</option>
                <option value="Voleibol">Voleibol</option>
            </select>
            <span asp-validation-for="Campo.Tipo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Campo.Ubicacion" class="form-label fw-semibold"></label>
            <input asp-for="Campo.Ubicacion" class="form-control" />
            <span asp-validation-for="Campo.Ubicacion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Campo.TarifaHora" class="form-label fw-semibold"></label>
            <input asp-for="Campo.TarifaHora" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Campo.TarifaHora" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-page="./Index" class="btn btn-outline-secondary">Cancelar</a>
            <button type="submit" class="btn btn-gradient">
                <i class="fas fa-save me-2"></i> Actualizar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-gradient {
        background: linear-gradient(to right, #00b09b, #96c93d);
        color: white;
        border: none;
        transition: 0.3s ease;
    }

        .btn-gradient:hover {
            filter: brightness(1.1);
            transform: scale(1.02);
        }

    .text-gradient {
        background: linear-gradient(to right, #11998e, #38ef7d);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
