@page
@model SportFieldBooking.Pages.Eventos.DeleteModel
@{
    ViewBag.Title = "Eliminar Evento";
}

<h1>Eliminar Evento</h1>

<h3>¿Está seguro de que desea eliminar este evento?</h3>
<div>
    <h4>Evento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Evento.NombreEvento)        
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Evento.FechaEvento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Evento.HoraInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Evento.HoraFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Evento.Descripcion)
        </dt>        
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Evento.IdEvento" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-primary">Back to list</a>
    </form>
</div>
