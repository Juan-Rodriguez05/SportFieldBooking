@page
@model SportFieldBooking.Pages.Eventos.EditModel
@{
    ViewData["Title"] = "Editar Evento";
}

<style>
    .btn-gradient {
        background: linear-gradient(to right, #8e2de2, #4a00e0);
        color: white;
        border: none;
        transition: 0.3s ease;
    }

        .btn-gradient:hover {
            filter: brightness(1.1);
            transform: scale(1.02);
        }

    .text-gradient {
        background: linear-gradient(to right, #8e2de2, #4a00e0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>

<h2 class="fw-bold text-gradient mb-4">Editar Evento</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Evento.IdEvento" />

            <div class="mb-3">
                <label asp-for="Evento.NombreEvento" class="form-label"></label>
                <input asp-for="Evento.NombreEvento" class="form-control" />
                <span asp-validation-for="Evento.NombreEvento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Evento.FechaEvento" class="form-label"></label>
                <input asp-for="Evento.FechaEvento" class="form-control" type="date" />
                <span asp-validation-for="Evento.FechaEvento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Evento.HoraInicio" class="form-label"></label>
                <input asp-for="Evento.HoraInicio" class="form-control" type="time" />
                <span asp-validation-for="Evento.HoraInicio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Evento.HoraFin" class="form-label"></label>
                <input asp-for="Evento.HoraFin" class="form-control" type="time" />
                <span asp-validation-for="Evento.HoraFin" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Evento.Descripcion" class="form-label"></label>
                <textarea asp-for="Evento.Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Evento.Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Evento.IdCampo" class="form-label"></label>
                <select asp-for="Evento.IdCampo" class="form-control" asp-items="Model.ListaCampos">
                    <option value="">-- Selecciona un campo --</option>
                </select>
                <span asp-validation-for="Evento.IdCampo" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <input type="submit" value="Guardar Cambios" class="btn btn-gradient" />
                <a asp-page="./Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}