@page
@model SportFieldBooking.Pages.Eventos.EditModel
@{
    ViewData["Title"] = "Editar Evento";
}

<h1>Editar Evento</h1>

<h4>Evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Evento.IdEvento" />

            <div class="form-group">
                <label asp-for="Evento.NombreEvento" class="control-label"></label>
                <input asp-for="Evento.NombreEvento" class="form-control" />
                <span asp-validation-for="Evento.NombreEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.FechaEvento" class="control-label"></label>
                <input asp-for="Evento.FechaEvento" class="form-control" />
                <span asp-validation-for="Evento.FechaEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.HoraInicio" class="control-label"></label>
                <input asp-for="Evento.HoraInicio" class="form-control" />
                <span asp-validation-for="Evento.HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.HoraFin" class="control-label"></label>
                <input asp-for="Evento.HoraFin" class="form-control" />
                <span asp-validation-for="Evento.HoraFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.Descripcion" class="control-label"></label>
                <textarea asp-for="Evento.Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Evento.Descripcion" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
