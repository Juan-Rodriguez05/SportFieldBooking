@page
@model SportFieldBooking.Pages.Eventos.IndexModel
@{
    ViewData["Title"] = "Eventos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-gratdient-red"> Lista de Eventos</h2>
        <a asp-page="./Create" class="btn-gradient-red">
            <i class="fas fa-plus me-2"></i> Crear Evento
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded bg-white p-3">
        <table class="table table-hover aling-middle">
            <thead class="table-light">
                <tr class="text-uppercase text-muted">
                    <th>@Html.DisplayNameFor(model => model.Eventos[0].NombreEvento)</th>
                    <th>@Html.DisplayNameFor(model => model.Eventos[0].FechaEvento)</th>
                    <th>@Html.DisplayNameFor(model => model.Eventos[0].HoraInicio)</th>
                    <th>@Html.DisplayNameFor(model => model.Eventos[0].HoraFin)</th>
                    <th>@Html.DisplayNameFor(model => model.Eventos[0].Descripcion)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Eventos)
                {
                    <tr>
                        <td>@item.NombreEvento</td>
                        <td>@item.FechaEvento.ToShortDateString()</td>
                        <td>@item.HoraInicio</td>
                        <td>@item.HoraFin</td>
                        <td>@item.Descripcion</td>
                        <td class="text-center">
                            <a asp-page=".Edit" asp-route-id="@item.IdEvento" class="btn btn btn-outline-warning m-1">Edit
                                <i class="fas fa-edit"></i>
                            </a>

                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .btn-gradient-red {
        background: linear-gradient(to right, #ff416c, #ff4b2b);
        color: white;
        border: none;
        transition: 0.3s ease;
    }

    .btn-gradient-red:hover {
        filter: brightness(1.1);
        transform: scale(1.02);
    }

    .text-gradient-red {
        background: Linear-gradient(to right, #ff4b2b, #ff416c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .table-hover tbody tr:hover {
        background-color: #fff5f5;
    }
</style>