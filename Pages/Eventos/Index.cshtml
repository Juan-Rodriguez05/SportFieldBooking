@page
@model SportFieldBooking.Pages.Eventos.IndexModel
@{
    ViewData["Title"] = "Eventos";
}

<h1>Eventos</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Crear nuevo Evento</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre del Evento</th>
            <th>Fecha</th>
            <th>Hora de Inicio</th>
            <th>Hora de Fin</th>
            <th>Campo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Eventos ! = null && Model.Eventos.Any())
    {
            foreach (var evento in Model.Eventos)
            {
                <tr>
                    <td>@evento.Nombre</td>
                    <td>@evento.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@evento.HoraInicio.ToString("HH:mm")</td>
                    <td>@evento.HoraFin.ToString("HH:mm")</td>
                    <td>@evento.Campo.Nombre</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@evento.Id" class="btn btn-warning">Editar</a>
                        <a asp-page="Delete" asp-route-id="@evento.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No hay eventos disponibles.</td>
            </tr>

        }
    </tbody>
</table>