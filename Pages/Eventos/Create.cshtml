@page
@model SportFieldBooking.Pages.Eventos.CreateModel
@{
    ViewData["Title"] = "Crear Evento";
}

<h1 class="text-gradient mb-4">Crear Evento</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Evento.NombreEvento" class="form-label"></label>
        <input asp-for="Evento.NombreEvento" class="form-control" />
        <span asp-validation-for="Evento.NombreEvento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Evento.FechaEvento" class="form-label"></label>
        <input asp-for="Evento.FechaEvento" type="date" class="form-control" />
        <span asp-validation-for="Evento.FechaEvento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Evento.HoraInicio" class="form-label"></label>
        <input asp-for="Evento.HoraInicio" type="time" class="form-control" />
        <span asp-validation-for="Evento.HoraInicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Evento.HoraFin" class="form-label"></label>
        <input asp-for="Evento.HoraFin" type="time" class="form-control" />
        <span asp-validation-for="Evento.HoraFin" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Evento.Descripcion" class="form-label"></label>
        <textarea asp-for="Evento.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Evento.Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Evento.IdCampo" class="form-label">Campo</label>
        <select asp-for="Evento.IdCampo" asp-items="Model.Campos" class="form-select"></select>
        <span asp-validation-for="Evento.IdCampo" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-gradient">Guardar</button>
    </div>
</form>

<style>
    .btn-gradient {
        background: linear-gradient(to right, #8e2de2, #4a00e0);
        color: white;
        border: none;
        transition: 0.3s ease;
    }

    .btn-gradient:hover {
        filter: brightness(1.1);
        transform: scale(1.02);
    }

    .text-gradient {
        background: linear-gradient(to right, #8e2de2, #4a00e0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}