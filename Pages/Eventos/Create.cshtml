@page
@model SportFieldBooking.Pages.Eventos.CreateModel
@{
    ViewData["Title"] = "Crear Evento";
}

<div class="container mt-5">
    <h2 class="fw-bold text-gradient-red mb-4"> Crear Un Nuevo Evento</h2>

    <form method="post" class="shadow-sm rounded bg-white p-4">
        <div asp-asp-validation-summary="ModeOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Evento.NombreEvento" class="form-label fw-semibold"></label>"
            <input asp-for="Evento.NombreEvento" class="form-control" />
            <span asp-validation-for="Evento.NombreEvento" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Evento.FechaEvento" class="form-label fw-semibold"></label>
            <input asp-for="Evento.FechaEvento" class="form-control" />
            <span asp-validation-for="Evento.FechaEvento" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Evento.HoraInicio" class="form-label fw-semibold"></label>
            <input asp-for="Evento.HoraInicio" class="form-control" />
            <span asp-validation-for="Evento.HoraInicio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Evento.HoraFin" class="form-label fw-semibold"></label>
            <input asp-for="Evento.HoraFin" class="form-control" />
            <span asp-validation-for="Evento.HoraFin" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Evento.Descripcion" class="form-label fw-semibold"></label>
            <textarea asp-for="Evento.Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Evento.Descripcion" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
            <button type="submit" class="btn btn-gradient-red">Crear Evento
                <i class="fas fa-plus"></i> Guardar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


